.flex-container
  display: flex
  flex-wrap: wrap
.flex-container__item
  display: flex
  flex-wrap: nowrap
  align-items: center
  width: 100%
  padding: 4px
.flex-container__sub-item
  margin: 0 4px 4px
@media (min-width: 768px)
  .flex-container
    flex-wrap: nowrap
  .flex-container__item
    flex-direction: column
    align-items: flex-start